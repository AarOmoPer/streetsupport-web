---
title: Accommodation Details - Street Support
description: Accommodation Details
image: https://streetsupport.net/assets/img/og/street-support.png
layout: withGoogle.hbs
permalink: false
jsBundle: accomDetails
section: findhelp
page: accomDetails
nosubnav: false
---
<div id="js-template-placeholder" class="template"></div>

{{> loading-spinner }}

<script id="js-template" type="text/template">
  <div class="block block--breadcrumbs">
    <div class="container">
      <ol class="breadcrumbs__list">
        <li class="breadcrumbs__item"><a href="/">Home</a></li>
          <li class="breadcrumbs__item"><a href="/find-help/">Find Help</a></li>
          <li class="breadcrumbs__item"><a href="/find-help/accommodation">Accommodation</a></li>
          <li class="breadcrumbs__item"><a href="/find-help/accommodation/listing">Listing</a></li>
          <li class="breadcrumbs__item">\{{{generalInfo.name}}}</li>
      </ol>
    </div>
  </div>

  <div class="block block--subpage-header">
    <div class="container">
      \{{#generalInfo}}
      <h1 class="h1  block__header">
      \{{{name}}}
      </h1>
      <h2 class="h2 block__sub-header">\{{{synopsis}}}</h2>
      \{{/generalInfo}}
    </div>
  </div> 
  <div class="block">
    <div class="container">
      <div class="block__content">
        <section class="accom-details__section accom-details__section--contact">
        <h2 class="h2">Contact</h2>

        <div class="js-map accom-details__map"></div>

        \{{#contactInformation}}
          \{{#telephone}}<p>\{{{telephone}}}</p>\{{/telephone}}
        \{{/contactInformation}}
        
        \{{#address}}
        <p class="h3">\{{ formattedAddress }}</p>
        \{{/address}}

        \{{#contactInformation}}
          <p>\{{#email}}<a href="mailto: \{{{email}}}">\{{{email}}}</a>\{{/email}}</p>
          <p>\{{#additionalInfo}}\{{{additionalInfo}}}\{{/additionalInfo}}</p>
        \{{/contactInformation}}
        </section>

        <section class="accom-details__section">
        \{{#generalInfo}}
          \{{{description}}}
        \{{/generalInfo}}
        </section>

        <section class="accom-details__section">
          <h2 class="h2">Price and Requirements</h2>
          \{{#pricingAndRequirements}}
            \{{#referralIsRequired}}<p class="h3">A referral is required for this property</p>\{{/referralIsRequired}}
            \{{{referralNotes}}}
            <dl>
              \{{#price}}<dt class="h3 accom-details__key">Price from:</dt>
              <dd class="accom-details__value">Â£\{{{price}}} per week \{{#foodIsIncluded}} (includes meals)\{{/foodIsIncluded}}</dd>\{{/price}}
            </dl>
            \{{{featuresAvailableAtAdditionalCost}}}
          \{{/pricingAndRequirements}}
        </section>

        <section class="accom-details__section">
          <h2 class="h2">Meals Availability</h2>
          \{{#pricingAndRequirements}}
            \{{{availabilityOfMeals}}}
          \{{/pricingAndRequirements}}
        </section>

        <section class="accom-details__section">
          <h2 class="h2">Suitable For</h2>
          \{{#residentCriteria}}
          <ul class="accom-details__features">
            \{{#acceptsMen}}<li>Men</li>\{{/acceptsMen}}
            \{{#acceptsWomen}}<li>Women</li>\{{/acceptsWomen}}
            \{{#acceptsCouples}}<li>Couples</li>\{{/acceptsCouples}}
            \{{#acceptsSingleSexCouples}}<li>Same Sex Couples</li>\{{/acceptsSingleSexCouples}}
            \{{#acceptsYoungPeople}}<li>Young People</li>\{{/acceptsYoungPeople}}
            \{{#acceptsFamilies}}<li>Families</li>\{{/acceptsFamilies}}
            \{{#acceptsBenefitsClaimants}}<li>Housing Benefits Claimants</li>\{{/acceptsBenefitsClaimants}}          
          </ul>
          \{{/residentCriteria}}
        </section>

        <section class="accom-details__section">
          <h2 class="h2">Property Features</h2>
          \{{#features}}
          <ul class="accom-details__features">
            \{{#acceptsPets}}<li>Allows Pets</li>\{{/acceptsPets}}
            \{{#hasDisabledAccess}}<li>Disabled Access</li>\{{/hasDisabledAccess}}
            \{{#hasSingleRooms}}<li>Single Rooms</li>\{{/hasSingleRooms}}
            \{{#hasSharedRooms}}<li>Shared Rooms</li>\{{/hasSharedRooms}}
            \{{#hasShowerBathroomFacilities}}<li>Shower and Bathroom Facilities</li>\{{/hasShowerBathroomFacilities}}
            \{{#hasAccessToKitchen}}<li>Kitchen Facilities</li>\{{/hasAccessToKitchen}}
            \{{#hasFlexibleMealTimes}}<li>Flexible Meal Times</li>\{{/hasFlexibleMealTimes}}
            \{{#hasLounge}}<li>Communal/Social Area</li>\{{/hasLounge}}
            \{{#hasLaundryFacilities}}<li>Laundry Facilities</li>\{{/hasLaundryFacilities}}
            \{{#providesCleanBedding}}<li>Provides Clean Bedding</li>\{{/providesCleanBedding}}
            \{{#allowsVisitors}}<li>Allows Visitors</li>\{{/allowsVisitors}}
          </ul>
          \{{{additionalFeatures}}}
          \{{/features}}
        </section>

        <section class="accom-details__section">
          <h2 class="h2">Support Provided</h2>
          \{{#supportProvided}}
          <ul>
          \{{#supportOffered}}
            <li>\{{ . }}</li>
          \{{/supportOffered}}
          </ul>
          \{{#hasOnSiteManager}}<p>The property has an on-site manager.</p>\{{/hasOnSiteManager}}
          \{{{supportInfo}}}
          \{{/supportProvided}}
        </section>
      </div>
    </div>
  </div>
</script>